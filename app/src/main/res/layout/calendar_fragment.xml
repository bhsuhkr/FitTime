                android:textSize="20dp"
                android:layout_below="@+id/exercise2"
                android:layout_alignLeft="@+id/exercise2"
                android:layout_alignStart="@+id/exercise2"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"/>
            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time 1"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="3dp"
                android:paddingTop="10dp"
                android:paddingBottom="3dp"
                android:layout_below="@+id/day"
                android:layout_alignLeft="@+id/day"/>

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time 2"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_below="@+id/time1"
                android:layout_alignLeft="@+id/day"/>

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time 3"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_below="@+id/time2"
                android:layout_alignLeft="@+id/day"
                />
            <Button
            android:id="@+id/plus_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/plus_icon"
            android:padding="10dp"
                android:layout_alignBottom="@+id/today_date"
                android:layout_alignRight="@+id/today"
                android:layout_alignEnd="@+id/today"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp" />

        </RelativeLayout>

