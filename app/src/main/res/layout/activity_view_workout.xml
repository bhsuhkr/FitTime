<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Name"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/workOutNameView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/workOutDescView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/workOutDescView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/workOutTypeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise List"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/workOutTypeView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/delworkOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Delete WorkOut" />

</LinearLayout>


